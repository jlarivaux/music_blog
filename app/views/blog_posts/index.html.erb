<%#@blog_posts.reverse.each do |blog_post| %>

<% @blog_posts.each do |blog_post| %>
    <div>
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <% if blog_post.draft? %>
            <div class="p-2 rounded bg-red-100 text-gray-900">Draft</div>
        <% elsif blog_post.scheduled? %>
            <div class="p-2 rounded bg-blue-100 text-gray-900">Scheduled</div>
        <% end %>
        <%= blog_post.content %>
    </div>
<% end%>

<% if @pagy.count > @pagy.limit %>
  <div class="my-12">
    <%== pagy_nav(@pagy, ) %>
  </div>
<% end %>